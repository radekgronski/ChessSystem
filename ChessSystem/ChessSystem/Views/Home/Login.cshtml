@model Users

@Html.Partial("_Navbar")

<div class="row login-container">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
            <fieldset>
                <h3>Login into the application</h3>

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                
                <div class="form-group login-form">
                    @Html.LabelFor(user => user.Login)
                    @Html.TextBoxFor(user => user.Login, new { @class = "form-control" })
                    @Html.ValidationMessageFor(user => user.Login)
                   
                    @Html.LabelFor(user => user.Password)
                    @Html.PasswordFor(user => user.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(user => user.Password)

                    <div class="text-center">
                        <input type="submit" value="Login" class="btn btn-primary btn-login" />
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>
