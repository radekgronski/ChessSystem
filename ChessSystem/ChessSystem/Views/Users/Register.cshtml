@model ChessSystem.Models.Users

@Html.Partial("_Navbar")

<div class="col-md-4 col-md-offset-4">
    @using (Html.BeginForm("Register", "Users", FormMethod.Post))
    {
        <fieldset>
            <h3>Registration</h3>
            <div class="form-group form">
                @Html.LabelFor(user => user.Name, "Name *")
                @Html.TextBoxFor(user => user.Name, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(user => user.Name)

                @Html.LabelFor(user => user.Login, "Login *")
                @Html.TextBoxFor(user => user.Login, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(user => user.Login)

                @Html.LabelFor(user => user.Password, "Password *")
                @Html.TextBoxFor(user => user.Password, new { @class = "form-control", required = "required", type = "password" })
                @Html.ValidationMessageFor(user => user.Password)

                <input type="submit" value="Register" class="btn btn-primary btn-submit center" />
            </div>
        </fieldset>
    }
</div>