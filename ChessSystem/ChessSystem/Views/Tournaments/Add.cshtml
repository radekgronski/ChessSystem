@model ChessSystem.Models.Tournaments

@Html.Partial("_Navbar")

<div class="col-md-10 col-md-offset-1">
    @using (Html.BeginForm("Add", "Tournaments", FormMethod.Post))
    {
        <fieldset>
            <h3>Create a new tournament</h3>
            <div class="form-group form col-md-6">
                @Html.LabelFor(tournament => tournament.Name)
                @Html.TextBoxFor(tournament => tournament.Name, new { @class = "form-control", required="required" })
                @Html.ValidationMessageFor(tournament => tournament.Name)

                @Html.LabelFor(tournament => tournament.Date)
                @Html.TextBoxFor(tournament => tournament.Date, new { type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(tournament => tournament.Date)

                @Html.LabelFor(tournament => tournament.Place)
                @Html.TextBoxFor(tournament => tournament.Place, new { @class = "form-control" })
                @Html.ValidationMessageFor(tournament => tournament.Place)

                @Html.LabelFor(tournament => tournament.IsPublic)
                @Html.CheckBoxFor(tournament => tournament.IsPublic, new { @class = "checkbox form-checkbox" })

                <input type="submit" value="Create" class="btn btn-primary btn-submit" />
            </div>
        </fieldset>
    }
</div>